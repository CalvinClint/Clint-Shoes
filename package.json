{
  "name": "evershop",
  "version": "1.0.0-beta",
  "type": "module",
  "description": "A shopping cart platform with Express, React and Postgres",
  "files": [
    "bin",
    "src",
    "dist",
    ".babelrc",
    "babel.config.js",
    "tsconfig.json"
  ],
  "bin": {
    "evershop": "./bin/evershop"
  },
  "workspaces": [
    "packages/*",
    "extensions/*"
  ],
  "scripts": {
    "dev-ts": "tsx ./packages/evershop/bin/evershop.ts dev",
    "dev": "evershop dev",
    "setup": "evershop install",
    "build": "evershop build",
    "start": "evershop start",
    "user:create": "evershop user:create",
    "user:changePassword": "evershop user:changePassword",
    "start:debug": "evershop start --debug",
    "test": "jest --workspace=@evershop/evershop",
    "cypress": "cypress run",
    "lint": "eslint --quiet --ext .jsx ",
    "prepare": "husky install",
    "typescript-build": "rimraf dist && tsc && copyfiles ./**/*.graphql dist/ && copyfiles ./pages dist/"
  },
  "author": "The Nguyen (https://evershop.io)",
  "license": "GNU GENERAL PUBLIC LICENSE 3.0",
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.14.8",
    "@babel/node": "^7.14.7",
    "@types/node": "^22.14.0",
    "babel-jest": "^28.1.1",
    "copyfiles": "^2.4.1",
    "cypress": "^13.15.1",
    "eslint": "^9.24.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prettier": "2.8.4",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "tailwindcss": "^3.2.1",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "webpack-bundle-analyzer": "^4.5.0"
  }
}
